<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elinsimenstad.showcaseapp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_owl_orange"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Homepage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SpotifyStreamer"
            android:label="@string/title_activity_spotify_streamer"
            android:parentActivityName=".Homepage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.elinsimenstad.showcaseapp.Homepage" />
        </activity>
    </application>

</manifest>
